}

/*Dropdown Menu - Override */
.dropdown-menu {
	-webkit-border-radius:0;
	-moz-border-radius: 0;
	border-radius: 0;
	margin: 0 0 0 -1px;
}
.dropdown-menu > li > a:hover,
.dropdown-menu > li > a:focus,
.dropdown-submenu:hover > a,
.dropdown-submenu:focus > a {
	background: grey;
}
.navbar-inverse .nav li.dropdown.open > .dropdown-toggle,
.navbar-inverse .nav li.dropdown.active > .dropdown-toggle,
.navbar-inverse .nav li.dropdown.open.active > .dropdown-toggle {
  color: #333;
  background-color: #f9f9f9;
}
.navbar .nav > li > .dropdown-menu:before {

  border-right: none !important;
  border-bottom: none !important;
  border-left: none !important;
  border-bottom-color: none;
  content: '';
}
.navbar .nav > li > .dropdown-menu:after {
  border-right: none !important;
  border-bottom: none !important;
  border-left: none !important;
  content: '';
}
.nav-tabs > li > a {
  -webkit-border-radius: 0 0 0 0;
     -moz-border-radius: 0 0 0 0;
          border-radius: 0 0 0 0;
}
/* Sub Navbar */
.sub-navbar {
	position: fixed;
	top: 41px;
	width: 100%;
	padding: 4px 0;
	background-color: #efefef;
	border-bottom: 1px solid #d9d9d9;
	color: #666;
	font-size: 0.7em;
	font-size: 0.8rem;
}
/* Default button set (flat-style) */
.btnflat,
.btnflat-fluid {
	font-family: proxima_reg, sans-serif;
	text-transform: uppercase;
	border-width: 2px;
	border-style: solid;
	padding: 5px 10px;
}
/* Use btnflat-fluid to fill 100% of its container */
.btnflat-fluid {
	width: 100%
}
/* Button Color Sets */
/* Default color for general use */
.default {
	border-color: #c2c2c2;
	background-color: #ccc;
	color: #444;
}
.default:hover {
	background-color: #f9f9f9;
	border: 2px solid #dedede;
	color: #666;
}

.default:active {
	background-color: #ccc;
	border: 2px solid #333;
	color: #fff;
}

.default:disabled {
	background-color: #f9f9f9;
	border: 2px solid #dedede;
	color: #666;
}


/* Reversed color */
.dark {
	background-color: #212121;
	border-color: #111;
	color: #ccc;
}
.dark:hover {
	background-color: #444;
	border: 2px solid #333;
	color: #ccc;
}
.dark:active {
	background-color: #ccc;
	border: 2px solid #333;
	color: #555;
}
/* Call to Action button */
.action {
	border: 2px solid #f4794c;
	background-color: #ff7f50;
	color: #fff;
}
.action:hover {
	background-color: #ff6026;
	border: 2px solid #c93600;
	color: #fff;
}
.action:active {
	background-color: #ff7f50;
	border: 2px solid #a62c00;
	color: #fff;
}
