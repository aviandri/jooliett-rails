/* Carousel (home slider) */
.carousel {
	margin: -18px 0 0 0;
	padding: 0;
}
.carousel-indicators {
	right: 25px;
}
.carousel-inner > .item {
	margin: 0;
	max-width: 100%;
	height: auto;
}
/*.carousel-inner > .item > img {
	position: relative;
	border: none;
	top: 0;
  	left: 0;  		
  	width: 100%;
  	height: auto;
}*/

.carousel-caption {
	width: 400px;	
	background: #fff;
	top:200px;
}


.carousel-caption > h1, .carousel-caption > ul > li {
	font-family: proxima_light, sans-serif;
	font-weight: normal;
	color: #999;
	text-transform: uppercase;
}
.carousel-caption > ul > li {
	font-size: 0.8rem;
}

.carousel-caption  h1 {
	font-size: 8rem;
	line-height: 80%;
	font-weight: normal;	
}

.carousel-caption  h2 {
	font-size: 2.4rem;
	line-height: 80%;
	font-weight: normal;	
}

.carousel-caption  span {
	font-size: 0.7rem;	
	font-weight: normal;	
}


.side-corner-tag {
    position: relative;
    color: #fff;
    overflow: hidden;    
} 

.side-corner-tag > p {   
    font-size: 11px;    
    position: absolute;
    display: inline-block;
    right: -25px;
    box-shadow: 0px 0px 10px rgba(0,0,0,0.2), inset 0px 5px 30px rgba(255,255,255,0.2);
    text-align: center;
    text-transform: uppercase;
    top: 22px;    
    width: 100px;
    padding: 1px 5px;
    -webkit-transform: rotate(45deg);
    -moz-transform: rotate(45deg);
    -o-transform: rotate(45deg);
    -ms-transform: rotate(45deg);
}

.side-corner-tag p.danger{
	background: #d93131;
}

.side-corner-tag p.warn{
	background: #ff8f6b;
}

@media (max-width: 480px) {
	.carousel-caption  h1 {
