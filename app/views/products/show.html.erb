              </div>
            </div> -->

            <div class="row-fluid">
              <div class="span6">
                <h4>Color Options</h4>
                <div class="wrapper color-tag" id="colors">
                  <% @master_product.product_colors.each do |product_color| %>
                    <span class="color-tag salmon">
                      <a href=""><%= product_color.color.name %></a></span>
                  <% end %>                  
                </div>
              </div>
              <div class="span6">
                <h4>Size</h4>
                <div class="wrapper size-tag">
                  <span class="size-tag"><a href="">S</a></span>
                  <span class="size-tag"><a href="">M</a></span>
                  <span class="size-tag"><a href="">L</a></span>
                  <span class="size-tag"><a href="">XL</a></span>
                  <span class="size-tag"><a href="">XXL</a></span>
                </div>
              </div>
            </div>
            <div class="row-fluid cta">
              <div class="span5">
                <ul class="unstyled">
                  <li><button class="btnflat-fluid default">Add To Cart</button></li>
                  <li><button class="btnflat-fluid default">Save as Favorite</button></li>
                </ul>
              </div>
              <div class="span7">
                <button class="btnflat-fluid action addcart">Buy</button>
              </div>
            </div>
          </div>
        </div><!-- ./span4 -->
      </div><!-- ./prod-details-container -->

