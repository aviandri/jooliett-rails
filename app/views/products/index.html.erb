 <!-- Sub Navigation Bar: Tools, Filter, Search etc. Only displayed in products page -->
  <div class="sub-navbar hidden-phone">
    <div class="container">
    Home / Products / <%= @category.nil? ? "" : @category.name %>
    </div>
  </div>
    
  
  <div class="container">
    <!-- Products -->
    <div class="row-fluid">
      
      <% @master_products.each do |master_product| %>
        <div class="span3">
          <div class="prod" id="<%= master_product.id %>" data-id="<%= master_product.id %>">
            <%= link_to product_path(:id => master_product.id) do %>
               <%= image_tag(master_product.primary_product_color.primary_image.image.medium.url) %>                
            <% end %>
            <div class="prod-meta">
              <span class="prod-title"><%= master_product.name%></span>
              <span class="prod-price">IDR <%= master_product.price %></span>
            </div>
          </div>
        </div>       
    <% end %>
    </div><!-- closing row-fluid  -->

  </div> <!-- /container -->
