<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title><%= yield :title %></title>
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<meta name="description" content="">
	<meta name="author" content="">
    <!-- Le styles -->
	<%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
	<%= javascript_include_tag "application", "data-turbolinks-track" => true %>
	<%= csrf_meta_tags %>
</head>
 <body <%= yield :body_custom_style %> >
    <div class="navbar navbar-inverse navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="brand" href="home.html">Jooliett</a>
          <div class="nav-collapse collapse">
            <ul class="nav" role="navigation">
              <li class="dropdown">
                <a id="drop2" href="#" role="button" class="dropdown-toggle" data-toggle="dropdown">Woman <b class="caret"></b></a>
                <!-- Dropdown Menu -->
                <ul class="dropdown-menu" role="menu" aria-labelledby="drop1">
                  <li role="presentation"><a role="menuitem" tabindex="-1" href="products.html">New Arrival</a></li>
                  <li role="presentation" class="divider"></li>
                  <li role="presentation"><a role="menuitem" tabindex="-1" href="products.html">Tops</a></li>
                  <li role="presentation"><a role="menuitem" tabindex="-1" href="products.html">Bottoms</a></li>
                  <li role="presentation">
                    <%= link_to "Dress", {:controller => "/products", :action => :index, :category_name => "dress"}, "role" => "menuitem", "tabindex" => "-1" %>
                  </li>
                  <li role="presentation"><a role="menuitem" tabindex="-1" href="products.html">Outwear</a></li>
                  <li role="presentation"><a role="menuitem" tabindex="-1" href="products.html">Sepatu</a></li>
                  <li role="presentation"><a role="menuitem" tabindex="-1" href="products.html">Tas</a></li>
                </ul>
              </li>
              <li><%= link_to "lookbook", look_books_path %></li>              
              <li><a href="video.html">Video</a></li>
              <li>
                <%= link_to "logout", destroy_user_session_path, :method => :delete%>
              </li>                       
                      
                  
            </ul>
            <ul class="nav pull-right">
              <li id="fat-menu" class="dropdown">
                <a href="#" id="drop3" role="button" class="dropdown-toggle" data-toggle="dropdown"><span class="qcart-count"><%= current_cart.products.empty? ? 0 : current_cart.products.count %> </span> Cart<b class="caret"></b></a>
                <div class="dropdown-menu quickcart" role="menu" aria-labelledby="drop3" data-cart-id="<%= cookies[:cart_id]%>" >
                  <!-- QuickCart -->
                  <% current_cart.cart_items.each do |cart_item| %>
                  <div class="qcart-item row">
                      <div class="span1">
                          <%= image_tag(cart_item.product.product_color.primary_image.image.thumb.url) %>                          
                      </div>
                      <div class="span2 qcart-details">
                          <span class="qcart-item-name"><%= cart_item.product.name %> <%= cart_product_quantity(cart_item) %></span>
                          <span class="qcart-item-price">IDR <%= cart_product_price(cart_item) %> </span>
                      </div>
                  </div>
                  <% end %>
                  
                  <!-- /qcart-item -->
                  <div class="qcart-action">
                      <button id="view-cart" class="btnflat-fluid dark">View Shopping Cart</button>
                      <p>or</p>
                      <button class="btnflat-fluid action">Checkout</button>
                  </div>

                </div><!-- ./quickcart -->
              </li>
            </ul>
          </div><!--/.nav-collapse -->
        </div><!-- ./container -->
      </div><!-- ./navbar-inner -->
    </div><!-- ./navbar navbar-inverse -->

   <%= yield %>

   <!-- Login Modal -->
    <div id="loginModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="loginModalLabel" aria-hidden="true">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
        <h3 id="loginModalLabel">Login</h3>
      </div>
      <div class="modal-body">
        <form class="form-horizontal">
          <div class="control-group">
            <label class="control-label" for="inputEmail">Email</label>
            <div class="controls">
              <input type="text" id="inputEmail" placeholder="Email">
            </div>
          </div>
          <div class="control-group">
            <label class="control-label" for="inputPassword">Password</label>
            <div class="controls">
              <input type="password" id="inputPassword" placeholder="Password">
            </div>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button class="btnflat default" data-dismiss="modal" aria-hidden="true">Close</button>
        <button class="btnflat action">Login</button>
      </div>
    </div>


    <!-- Footer -->
    <div id="footer">
      <div class="navbar navbar-inverse navbar-fixed-bottom">
        <div class="navbar-inner">
          <div class="container">
            <div class="row-fluid">
              <div class="span2">&copy; 2013 Jooliett</div>
              <div class="span9">
                  <ul class="inline">
                    <li><a href="#company">Company</a></li>
                    <li><a href="#policies">Policies</a></li>
                    <li><a href="#shipping">Shipping</a></li>
                    <li><a href="#contact">Contact Us</a></li>
                  </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
