  <div class="container checkout">
      <div class="row-fluid">
        <div class="span12">     

          <h3>About You</h3>
          <div class="row-fluid">
            <div class="span10"> 
              <div class="checkout-steps">
                <ul class="unstyled clearfix">
                  <li><span class="current">About You</span></li>
                  <li><span>Shipping</span></li>
                  <li><span>Payment</span></li>
                  <li><span>Summary &amp; Pay</span></li>
                </ul>
              </div>
              <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => "form-horizontal" }) do |f| %>
                <div class="control-group <%= error_flag(resource, 'name') %>">
                  <label class="control-label" for="inputName">Full Name</label>
                  <div class="controls">
                    <%= f.text_field :name, :class => "input-xlarge", :placeholder => "Name" %>
                      <span class="help-inline"><%= error_message(resource, "name") %></span>
                  </div>
                </div>
                        
                <div class="control-group <%= error_flag(resource, 'email') %>">
                  <label class="control-label" for="inputEmail">Email</label>
                  <div class="controls">
                    <%= f.email_field :email, :class => "input-xlarge", :placeholder => "Email" %>
                    <span class="help-inline"><%= error_message(resource, "email") %></span>
                  </div>
                </div>

                <div class="control-group <%= error_flag(resource, 'password') %>">
                  <label class="control-label" for="inputPassword">Password</label>
                  <div class="controls">
                    <%= f.password_field :password, :class => "input-xlarge", :placeholder => "Password" %>
                    <span class="help-inline"><%= error_message(resource, "password") %></span>                    
                  </div>
                </div>                        

                <div class="control-group">
                  <div class="controls">
                  <button class="btnflat action">Next Step</button>
                  </div>
                </div>

                <label class="checkbox">
                  <input type="checkbox" value="">I'd like to receive exclusive discounts and style advice by email, post and SMS from Jooliett.
                </label>

                <label class="checkbox">
                  <input type="checkbox" value="">I'd like to receive updates by email, post and SMS from carefully selected Jooliett partners. See our <a href="#">privacy policy</a>.
                </label>
              <% end %>
          </div>
          
          <div class="span2">
            <h5>Need Help?</h5>
            <div class="helpbox">
              <ul class="unstyled">
                <li><i class="icon-info-sign"></i> +62-21-89788990</li>
                <li><i class="icon-envelope"></i> cs@jooliett.com</li>
                <li><i class="icon-comment"></i> jooliett (skype)</li>
                <li><i class="icon-time"></i> 09.00 - 18.00</li>
              </ul>
            </div>
          </div>

        </div><!-- ./span12 -->
      </div><!-- ./ row-fluid -->
    </div><!-- ./container -->